<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/mento_subjectCon"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_marginRight="5dp">
            <TextView
                android:id="@+id/mento_subject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="과목"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="13sp"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_toRightOf="@+id/mento_subjectCon">
            <TextView
                android:id="@+id/mento_place"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="지역"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="13sp"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/mento_heart"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_clicked" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/mento_img_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="40dp"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/mento_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/colorPrimary"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/mento_study_id"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/mento_img_card"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-15dp"
            android:layout_toRightOf="@+id/mento_img_card"
            android:background="@color/colorPrimary"/>

        <TextView
            android:id="@+id/mento_study_intro"
            android:layout_width="100dp"
            android:layout_height="15dp"
            android:layout_below="@+id/mento_study_id"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/mento_img_card"
            android:background="@color/colorPrimary"
            android:layout_marginTop="3dp"/>
        <TextView
            android:id="@+id/mento_study_school"
            android:layout_width="100dp"
            android:layout_height="15dp"
            android:layout_below="@+id/mento_study_intro"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/mento_img_card"
            android:background="@color/colorPrimary"/>

        <TextView
            android:id="@+id/mento_study_qualification"
            android:layout_width="100dp"
            android:layout_height="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/mento_study_school"
            android:layout_toRightOf="@+id/mento_img_card"
            android:background="@color/colorPrimary"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/viewUnderline"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</LinearLayout>