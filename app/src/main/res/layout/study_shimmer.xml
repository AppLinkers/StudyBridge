<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_marginRight="5dp">
            <TextView
                android:id="@+id/menti_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="모집중"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:textStyle="bold"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_marginRight="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="과목"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="13sp"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/colorPrimary">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="지역"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="13sp"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/menti_img_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="40dp"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/menti_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/colorPrimary"
                android:elevation="0.5dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/menti_study_name"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/menti_img_card"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-10dp"
            android:layout_toRightOf="@+id/menti_img_card"
            android:background="@color/colorPrimary"/>

        <TextView
            android:id="@+id/menti_study_intro"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_below="@+id/menti_study_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/menti_img_card"
            android:background="@color/colorPrimary"/>

        <TextView
            android:id="@+id/menti_study_nowNum"
            android:layout_width="100dp"
            android:layout_height="12dp"
            android:layout_below="@+id/menti_study_intro"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/menti_img_card"
            android:background="@color/colorPrimary"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/viewUnderline"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</LinearLayout>