<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="40dp"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/home_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안승우"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/textColorPrimary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="님 Let's study!"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/textColorPrimary"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:elevation="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="오늘의 과제 확인하기"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="17sp"
                android:gravity="bottom"
                android:padding="10dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="나의 ToDo"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/textColorPrimary"
            android:layout_marginTop="70dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="코딩스터디"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="start" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2주차"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="right" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/viewUnderline"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="전체 진행률"
                    android:textSize="14sp"
                    android:textColor="@color/textColorPrimary"
                    android:paddingTop="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="40"
                        android:textStyle="bold"
                        android:gravity="end"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="% 완료"
                        android:textStyle="bold"
                        android:gravity="end"/>

                </LinearLayout>


                <ProgressBar
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:max="100"
                    android:progress="40"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이번주 진행률"
                    android:textSize="14sp"
                    android:textColor="@color/textColorPrimary"
                    android:paddingTop="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="80"
                        android:textStyle="bold"
                        android:gravity="end"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="% 완료"
                        android:textStyle="bold"
                        android:gravity="end"/>

                </LinearLayout>


                <ProgressBar
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:max="100"
                    android:progress="80"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mento 찾기"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/textColorPrimary"
            android:layout_marginTop="70dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="140dp"
                android:paddingTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        android:layout_marginRight="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="서울"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/colorPrimaryDark">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="코딩"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/mento_img_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="40dp"
                        android:layout_centerVertical="true">
                        <ImageView
                            android:id="@+id/mento_img"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_launcher_foreground"
                            android:elevation="0.5dp"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/mento_study_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Codemaster"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/mento_img_card"
                        android:layout_alignTop="@+id/mento_img_card"/>
                    <TextView
                        android:id="@+id/mento_study_intro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="한줄 한줄 정성을 담았습니다"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:layout_marginLeft="15dp"
                        android:layout_below="@+id/mento_study_id"
                        android:layout_toRightOf="@+id/mento_img_card"/>
                    <ImageView
                        android:id="@+id/ic_school"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_school"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="6dp"
                        android:layout_below="@+id/mento_study_intro"
                        android:layout_toRightOf="@+id/mento_img_card"/>
                    <TextView
                        android:id="@+id/mento_study_school"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="서울과학기술대학교"
                        android:textSize="12sp"
                        android:textColor="@color/textColorPrimary"
                        android:maxLines="1"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_below="@+id/mento_study_intro"
                        android:layout_toRightOf="@+id/ic_school"/>
                    <ImageView
                        android:id="@+id/ic_qualification"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_qualification"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="3dp"
                        android:layout_below="@+id/mento_study_school"
                        android:layout_toRightOf="@+id/mento_img_card"/>
                    <TextView
                        android:id="@+id/mento_study_qualification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COS 1급"
                        android:textSize="12sp"
                        android:textColor="@color/textColorPrimary"
                        android:maxLines="1"
                        android:layout_marginLeft="5dp"
                        android:layout_below="@+id/mento_study_school"
                        android:layout_toRightOf="@+id/ic_qualification"/>


                </RelativeLayout>

            </LinearLayout>
                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="140dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="@color/colorPrimary"
                            android:layout_marginRight="5dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="하남"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="@color/colorPrimaryDark">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="자격증"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/mento_img_card2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="40dp"
                            android:layout_centerVertical="true">
                            <ImageView
                                android:id="@+id/mento_img2"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/ic_launcher_foreground"
                                android:elevation="0.5dp"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/mento_study_id2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="기계과도 화이팅"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@+id/mento_img_card2"
                            android:layout_alignTop="@+id/mento_img_card2"/>
                        <TextView
                            android:id="@+id/mento_study_intro2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="맡겨만 주세요"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:layout_marginLeft="15dp"
                            android:layout_below="@+id/mento_study_id2"
                            android:layout_toRightOf="@+id/mento_img_card2"/>
                        <ImageView
                            android:id="@+id/ic_school2"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_school"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="6dp"
                            android:layout_below="@+id/mento_study_intro2"
                            android:layout_toRightOf="@+id/mento_img_card2"/>
                        <TextView
                            android:id="@+id/mento_study_school2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="홍익대학교"
                            android:textSize="12sp"
                            android:textColor="@color/textColorPrimary"
                            android:maxLines="1"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="5dp"
                            android:layout_below="@+id/mento_study_intro2"
                            android:layout_toRightOf="@+id/ic_school2"/>
                        <ImageView
                            android:id="@+id/ic_qualification2"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_qualification"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="3dp"
                            android:layout_below="@+id/mento_study_school2"
                            android:layout_toRightOf="@+id/mento_img_card2"/>
                        <TextView
                            android:id="@+id/mento_study_qualification2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="일반기계기사"
                            android:textSize="12sp"
                            android:textColor="@color/textColorPrimary"
                            android:maxLines="1"
                            android:layout_marginLeft="5dp"
                            android:layout_below="@+id/mento_study_school2"
                            android:layout_toRightOf="@+id/ic_qualification2"/>


                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="스터디 찾기"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/textColorPrimary"
            android:layout_marginTop="50dp"/>






    </LinearLayout>

</ScrollView>