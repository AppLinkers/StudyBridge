<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="45dp"
            android:text="사용자님"
            android:textColor="@color/textColorPrimary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/underTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:text="오늘도 Let's study!"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp" />
        <com.google.android.material.card.MaterialCardView
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/black30"
            app:strokeWidth="1dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/title"
            android:layout_marginRight="15dp">
            <ImageView
                android:id="@+id/headerImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:id="@+id/subjectLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/underTitle"
            android:weightSum="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="55dp">
            <LinearLayout
                android:id="@+id/goEnglish"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/abc"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="영어"
                    android:textColor="@color/textColorPrimary"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/goMath"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/math"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수학"
                    android:textColor="@color/textColorPrimary"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/goDev"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/dev"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="개발"
                    android:textColor="@color/textColorPrimary"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/goEtc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/more"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기타"
                    android:textColor="@color/textColorPrimary"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/headerLine"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/subjectLayout"
            android:layout_marginTop="45dp"
            android:background="@color/palletGrey" />

        <TextView
            android:id="@+id/bodyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/headerLine"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            android:text="스터디를 시작해보세요"
            android:textColor="@color/black30"
            android:textSize="14sp"
            android:textStyle="bold" />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/goMakeStudy"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/bodyTitle"
            app:cardElevation="0dp"
            app:cardCornerRadius="5dp">
            <TextView
                android:id="@+id/goStudy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/colorprimary_dark_gradient"
                android:text="스터디 만들기"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:cardCornerRadius="15dp"
            android:layout_alignTop="@id/goMakeStudy"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_right"/>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/bodyTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/goMakeStudy"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="45dp"
            android:text="최근 올라온 스터디"
            android:textColor="@color/black30"
            android:textSize="14sp"
            android:textStyle="bold" />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/lateStudy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/bodyTitle2"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp">

            <include
                android:id="@+id/studyItem"
                layout="@layout/study_menti_item" />
        </com.google.android.material.card.MaterialCardView>
        <View
            android:id="@+id/studyLine"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/lateStudy"
            android:layout_marginTop="45dp"
            android:background="@color/palletGrey" />

        <TextView
            android:id="@+id/mentorTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/studyLine"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            android:text="멘토를 만나보세요"
            android:textColor="@color/black30"
            android:textSize="14sp"
            android:textStyle="bold" />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/goMetor"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/mentorTitle"
            app:cardElevation="0dp"
            app:cardCornerRadius="5dp">
            <TextView
                android:id="@+id/findMentor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/colorprimary_dark_gradient"
                android:text="멘토 찾기"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:cardCornerRadius="15dp"
            android:layout_alignTop="@id/goMetor"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_right"/>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/mentorTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/goMetor"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="45dp"
            android:text="최근 등록한 멘토"
            android:textColor="@color/black30"
            android:textSize="14sp"
            android:textStyle="bold" />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/lateMentor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/mentorTitle2"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="50dp">
            <include
                android:id="@+id/mentorItem"
                layout="@layout/study_mento_item"/>
        </com.google.android.material.card.MaterialCardView>


    </RelativeLayout>
</androidx.core.widget.NestedScrollView>