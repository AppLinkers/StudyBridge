<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="마이"
            android:textColor="@color/textColorPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/imgCon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp"
            android:layout_below="@id/title"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="centerCrop"/>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgCon"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/imgCon"
            android:text="이름"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgCon"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="15dp"
            android:text="프로필수정"
            android:textColor="@color/black30"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/headerLine"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/imgCon"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="10dp"
            android:background="@color/palletGrey" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/headerLine"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/announce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="공지사항"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/apply_study"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="신청한 스터디"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold"
                android:padding="20dp"/>
            <TextView
                android:id="@+id/like_mentor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="관심 멘토"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold"
                android:padding="20dp"/>
            <TextView
                android:id="@+id/setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="설정"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold"
                android:padding="20dp"/>
        </LinearLayout>

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>