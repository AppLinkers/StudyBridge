<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        app:elevation="0dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/menti_detial_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="스터디 이름"
            app:titleTextColor="@color/textColorPrimary"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="30dp"
        android:layout_marginBottom="-40dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_launcher_foreground"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:padding="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_study_white"/>
                <TextView
                    android:id="@+id/menti_detail_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="스터디 종류"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_weight="0.005"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_location_white"/>
                <TextView
                    android:id="@+id/menti_detail_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지역"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_weight="0.005"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_mypage_white"/>
                <TextView
                    android:id="@+id/menti_detail_peopleNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인원 수"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_above="@+id/layout_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingBottom="60dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="25dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="상태"
                    android:textColor="@color/textColorPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:id="@+id/menti_detail_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="모집중"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="한줄 소개"
                    android:textColor="@color/textColorPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="50dp"
                    />
                <TextView
                    android:id="@+id/menti_detail_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="intro"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Information"
                    android:textColor="@color/textColorPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="50dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="info"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="신청한 멤버 리스트"
                    android:textColor="@color/textColorPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="50dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/enroll_members"
                    android:layout_height="wrap_content"
                    android:text="info"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="신청한 멘토 리스트"
                    android:textColor="@color/textColorPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="50dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/enroll_mentor"
                    android:layout_height="wrap_content"
                    android:text="멘토아이디/ 이력서 보기"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"/>


            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:id="@+id/layout_button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:background="@color/white">
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.StudyBridge.Button"
                android:id="@+id/applyBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="신청하기"
                android:onClick="applyStudy"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.StudyBridge.Button"
                android:id="@+id/applyMentor"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="멘토 신청하기"
                android:onClick="applyMentor"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>