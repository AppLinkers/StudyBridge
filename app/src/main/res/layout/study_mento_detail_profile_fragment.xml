<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical">
    <TextView
        android:id="@+id/mento_profile_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="한줄 소개"
        android:textStyle="bold"
        android:textSize="15sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="학교"
            android:textColor="@color/textColorPrimary"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/mento_profile_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="학교"
            android:textColor="@color/textColorPrimary"
            android:textSize="14sp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="지역"
            android:textColor="@color/textColorPrimary"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/mento_profile_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="지역"
            android:textColor="@color/textColorPrimary"
            android:textSize="14sp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="전문과목"
            android:textColor="@color/textColorPrimary"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/mento_profile_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="과목"
            android:textColor="@color/textColorPrimary"
            android:textSize="14sp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보유 자격증"
            android:textColor="@color/textColorPrimary"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mento_profile_certi_RV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="어필"
            android:textColor="@color/textColorPrimary"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/mento_profile_appeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:text="어필appeal 어필appeal 어필appeal 어필appeal 어필appeal 어필appeal 어필appeal 어필appeal 어필appeal어필appeal어필appeal어필appeal어필appeal어필appeal어필appeal"
            android:textColor="@color/textColorPrimary"
            android:lineSpacingExtra="8dp"
            android:letterSpacing="0.03"/>
    </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>