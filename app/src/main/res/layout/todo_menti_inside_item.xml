<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_marginBottom="15dp"
    android:layout_marginTop="1dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:elevation="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/todo_menti_inside_CV"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="20dp"
            android:layout_centerVertical="true">
            <LinearLayout
                android:id="@+id/todo_menti_inside_CVColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/palletBlue"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/todo_menti_inside_CVText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="D-100"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:gravity="center"/>
                <ImageView
                    android:id="@+id/todo_menti_inside_CVImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_check_white"
                    android:visibility="gone"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/todo_menti_inside_taskName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/todo_menti_inside_CV"
            android:text="과제명"
            android:textColor="@color/textColorPrimary"
            android:textSize="17sp" />
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>