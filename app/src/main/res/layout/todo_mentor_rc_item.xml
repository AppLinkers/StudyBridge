<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="15dp"
    app:strokeColor="@color/viewUnderline"
    app:strokeWidth="1dp"
    app:cardElevation="0dp">
    <RelativeLayout
        android:id="@+id/con"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="18sp"
            android:textColor="@color/textColorPrimary"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="한줄 소개"
            android:textColor="@color/textColorPrimary70"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/intro"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:text="과목"
            android:textColor="@color/textColorPrimary" />
        <TextView
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="·"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/subject"
            android:layout_below="@id/intro"/>

        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/intro"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/dot"
            android:text="지역"
            android:textColor="@color/textColorPrimary" />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/imgFirstCon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/black30"
            app:strokeWidth="1dp"
            android:layout_below="@+id/subject"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="centerCrop"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/imgSecondCon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/black30"
            app:strokeWidth="1dp"
            android:layout_below="@+id/subject"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/imgFirstCon"
            android:layout_marginLeft="-10dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="centerCrop"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/black30"
            app:strokeWidth="1dp"
            android:layout_below="@+id/subject"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/imgSecondCon"
            android:layout_marginLeft="-10dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="centerCrop"/>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgFirstCon"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/imgFirstCon"
            android:text="n명 참여중.."
            android:textColor="@color/palletRed50"
            android:textSize="12sp"
            android:textStyle="bold" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>