<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/menti_filter_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:elevation="0dp"
        android:layout_alignParentTop="true">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/menti_filter_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            style="@style/Widget.StudyBridge.Toolbar"
            app:menu="@menu/menti_filter_menu"
            app:title="스터디 검색하기"/>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/menti_filter_appbar"
        android:layout_above="@+id/menti_filter_button"
        android:padding="25dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="과목"
                android:textColor="@color/textColorPrimary"
                android:textSize="18sp"
                android:gravity="center"/>
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/menti_filter_subjectGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp">
                <com.google.android.material.chip.Chip
                    android:id="@+id/menti_filter_subjectEnglish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="영어"
                    style="@style/Widget.StudyBridge.Chip.Filter"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/menti_filter_subjectMath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수학"
                    style="@style/Widget.StudyBridge.Chip.Filter"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/menti_filter_subjectDev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="개발"
                    style="@style/Widget.StudyBridge.Chip.Filter"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/menti_filter_subjectEtc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기타"
                    style="@style/Widget.StudyBridge.Chip.Filter"/>
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="지역"
                android:textColor="@color/textColorPrimary"
                android:textSize="18sp"
                android:gravity="center"/>
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/menti_filter_placeGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp">
                <com.google.android.material.chip.Chip
                    android:id="@+id/menti_filter_placeSeoul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서울"
                    style="@style/Widget.StudyBridge.Chip.Filter"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/menti_filter_placeGeongi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="경기"
                    style="@style/Widget.StudyBridge.Chip.Filter"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/menti_filter_placeIncheon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인천"
                    style="@style/Widget.StudyBridge.Chip.Filter"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/menti_filter_placeEtc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기타"
                    style="@style/Widget.StudyBridge.Chip.Filter"/>
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/menti_filter_button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/menti_filter_btn"
            style="@style/Widget.StudyBridge.Button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="적용하기"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>