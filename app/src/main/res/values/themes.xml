<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StudyBridge" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
    </style>

    //textInput
    <style name="Widget.StudyBridge.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Shrine.TextInputLayout.HintText</item>
        <item name="hintTextColor">@color/textColorPrimary</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/textInputOutlineColor</item>
    </style>

    <style name="Widget.StudyBridge.TextInputLayout.black" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Shrine.TextInputLayout.HintText</item>
        <item name="hintTextColor">@color/textColorPrimary</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/textColorPrimary</item>

    </style>

    <style name="TextAppearance.Shrine.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>


    //Toolbar
    <style name="Widget.StudyBridge.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="android:theme">@style/Theme.StudyBridge</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="TextAppearance.StudyBridge.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>


    //Button
    <style name="Widget.StudyBridge.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
    </style>

    <style name="Widget.StudyBridge.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>


    //ActionBar
    <style name="Theme.StudyBridge.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    //Chip
    <style name="Widget.StudyBridge.Chip.Filter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="checkedIcon">@drawable/ic_check_white</item>
        <item name="checkedIconVisible">true</item>
        <item name="chipBackgroundColor">@color/chip_background_list_pink</item>
        <item name="android:textColor">@color/chip_text_list</item>
        <item name="chipStrokeColor">@color/colorPrimaryDark</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>
    <style name="Widget.StudyBridge.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_list</item>
        <item name="android:textColor">@color/chip_text_list</item>
        <item name="chipStrokeColor">@color/textColorPrimary</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>




    <style name="Theme.StudyBridge.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.StudyBridge.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>